<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zpanel.anderson.zebaki.tab2">

    <!-- TODO: Update blank fragment layout -->


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/card1"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                card_view:cardBackgroundColor="#ecebeb"

                card_view:theme="@style/Base.DialogWindowTitleBackground.AppCompat"
                card_view:cardCornerRadius="4dp"
                android:layout_centerHorizontal="true" >
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="73dp"
        android:layout_marginEnd="73dp"
        android:layout_marginTop="3.5dp"
        android:background="@null"
        android:id="@+id/editText"
        android:hint="My Telephone" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/card2"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card1"
                card_view:cardBackgroundColor="#d9d8d8"
                android:layout_marginTop="10dp"

                card_view:theme="@style/Base.DialogWindowTitleBackground.AppCompat"
                card_view:cardCornerRadius="4dp"
                android:layout_centerHorizontal="true" >

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:background="@null"


        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_marginTop="3.5dp"
        android:id="@+id/editText2"
        android:hint="Client Telephone" />

        </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/card4"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card2"
                card_view:cardBackgroundColor="#c1bfbf"
                android:layout_marginTop="10dp"

                card_view:theme="@style/Base.DialogWindowTitleBackground.AppCompat"
                card_view:cardCornerRadius="4dp"
                android:layout_centerHorizontal="true" >

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:background="@null"

                    android:layout_alignLeft="@+id/editText"
                    android:layout_alignStart="@+id/editText"
                    android:layout_marginTop="3.5dp"
                    android:id="@+id/editText4"
                    android:hint="Professional's ID" />

            </android.support.v7.widget.CardView>






            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/card3"
                android:layout_height="wrap_content"
               android:layout_below="@+id/card4"

                card_view:theme="@style/Base.DialogWindowTitleBackground.AppCompat"
                card_view:cardCornerRadius="4dp"
                android:layout_centerHorizontal="true" >

    <Button
        android:text="Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:background="#039b0a"
        android:layout_marginTop="80dp"
        android:id="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    </android.support.v7.widget.CardView>
        </RelativeLayout>


</ScrollView>
