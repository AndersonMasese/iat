<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_help"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zpanel.anderson.zebaki.Help">
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/card1"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        card_view:theme="@style/Base.DialogWindowTitleBackground.AppCompat"
        card_view:cardCornerRadius="4dp"
        android:layout_centerHorizontal="true" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <TextView
                android:text="About Zebaki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView2" />
            <TextView
                android:text="Zebaki, Where Pros meet clients, and you get paid for making them meet!There are two registration options.Professional registration and normal user registration.Using the get password option to the left pane, registrered pros can access their online zpanel password and start interacting with potential clients.For normal user, one needs to register and use these credentials to log into zebaki for account access or refer clients to pros for payments.Payment claims can be made on the left panel to zebaki.Simply, swipe to the right to access the various categories of registered professionals,copy paste their registration ID to the field in referrals section over the person you are trying to refer to that pro/institution.
                Zebaki will pay you 10% of the value 0f successful referrals made.Once your referral has utilized the services of the registered pro, lay your claim immediately through zebaki@zebaki.co.ke and get paid.Make Zebaki your hassle!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:id="@+id/textView3" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card1"

        card_view:theme="@style/Base.DialogWindowTitleBackground.AppCompat"
        card_view:cardCornerRadius="4dp"

        android:layout_centerHorizontal="true" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <TextView
                android:text="Registration and Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/ambassador" />
            <TextView
                android:text="Use the button on right botton corner to register. Note that only registered individuals can log in and subsequently claim their returns for work done."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ambassador"
                android:id="@+id/ambassador1" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card2"
        android:layout_below="@+id/card1"
        card_view:theme="@style/Base.DialogWindowTitleBackground.AppCompat"
        card_view:cardCornerRadius="4dp"


        android:layout_centerHorizontal="true" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <TextView
                android:text="Kwetu "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/me" />
            <TextView
                android:text="Simply put, Zebaki is home.make pros meet their clients and get paid, all over the world!You are a pro and wanna do business? do that right from your phone!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/me"
                android:id="@+id/me1" />


        </RelativeLayout>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:theme="@style/Base.DialogWindowTitleBackground.AppCompat"
            card_view:cardCornerRadius="4dp"
            android:layout_below="@+id/card2"

            android:layout_centerHorizontal="true" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">
                <TextView
                    android:text="Others"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/reg" />
                <TextView
                    android:text="Zebaki is pretty intuitive. Swipe left center rigth,click here and there and you'l be at home with the working of the software"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reg"
                    android:id="@+id/reg1" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </android.support.v7.widget.CardView>
</LinearLayout>



</ScrollView>

